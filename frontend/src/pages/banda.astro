---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-8">
		<div class="bg-white shadow rounded-lg">
			<div class="px-4 py-5 sm:p-6">
				<div x-data="{
					bandName: '',
					members: [],
					newMember: '',
					
					addMember() {
						if (this.newMember.trim()) {
							this.members.push(this.newMember.trim());
							this.newMember = '';
						}
					},
					
					removeMember(index) {
						this.members.splice(index, 1);
					},
					
					async saveBand() {
						if (!this.bandName.trim()) {
							alert('Por favor ingresa el nombre de la banda');
							return;
						}

						const token = localStorage.getItem('token');
						if (!token) {
							alert('Debes iniciar sesión para guardar una banda');
							window.location.href = '/login';
							return;
						}

						try {
							const response = await fetch('http://localhost:8080/api/bands', {
								method: 'POST',
								headers: {
									'Content-Type': 'application/json',
									'Authorization': `Bearer ${token}`
								},
								body: JSON.stringify({
									name: this.bandName,
									members: this.members
								})
							});

							if (response.ok) {
								const savedBand = await response.json();
								console.log('Banda guardada:', savedBand);
								alert('¡Configuración de la banda guardada exitosamente!');
								
								// Clear the form
								this.bandName = '';
								this.members = [];
							} else if (response.status === 401) {
								alert('Sesión expirada. Por favor inicia sesión nuevamente.');
								localStorage.removeItem('token');
								localStorage.removeItem('user');
								window.location.href = '/login';
							} else {
								const errorData = await response.text();
								alert('Error al guardar la banda: ' + errorData);
							}
						} catch (error) {
							console.error('Error:', error);
							alert('Error al conectar con el servidor');
						}
					}
				}">
					
					<!-- Band Name Configuration -->
					<div class="mb-8">
						<h2 class="text-lg font-medium text-gray-900 mb-4">Configuración de la Banda</h2>
						<div>
							<label for="band-name" class="block text-sm font-medium text-gray-700 mb-2">
								Nombre de la Banda
							</label>
							<input
								type="text"
								id="band-name"
								x-model="bandName"
								class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
								placeholder="Ingresa el nombre de la banda..."
							/>
						</div>
					</div>

					<!-- Members Management -->
					<div class="mb-8">
						<h3 class="text-md font-medium text-gray-900 mb-4">Miembros de la Banda</h3>
						
						<!-- Add New Member -->
						<div class="flex gap-2 mb-4">
							<input
								type="text"
								x-model="newMember"
								@keyup.enter="addMember()"
								class="flex-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
								placeholder="Ingresa el nombre del miembro..."
							/>
							<button
								@click="addMember()"
								class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
							>
								Agregar Miembro
							</button>
						</div>

						<!-- Members List -->
						<div class="space-y-2">
							<template x-for="(member, index) in members" :key="index">
								<div class="flex items-center justify-between p-3 bg-gray-50 rounded-md">
									<span class="text-sm text-gray-900" x-text="member"></span>
									<button
										@click="removeMember(index)"
										class="text-red-600 hover:text-red-800 focus:outline-none"
									>
										<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
										</svg>
									</button>
								</div>
							</template>
							
							<div x-show="members.length === 0" class="text-center py-4 text-gray-500">
								Aún no hay miembros agregados. Agrega tu primer miembro arriba.
							</div>
						</div>
					</div>

					<!-- Save Button -->
					<div class="flex justify-end">
						<button
							@click="saveBand()"
							class="px-6 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2"
						>
							Guardar Configuración
						</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</Layout>
